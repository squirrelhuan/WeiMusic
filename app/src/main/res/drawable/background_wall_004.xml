<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <solid android:color="@color/black"/>

    <!--corners标签: 圆角-->
    <!--bottomLeftRadius 左下角-->
    <!--bottomRightRadius 右下角-->
    <!--topLeftRadius 左上角-->
    <!--topRightRadius 右上角-->
    <!--radius 是四个角, 设置了这个就不需要设置上面的四个了, PS:它的优先级比较低, 会被其他参数覆盖-->
    <corners
        android:bottomLeftRadius="0dip"
        android:bottomRightRadius="0dip"
        android:radius="0dip"
        android:topLeftRadius="0dip"
        android:topRightRadius="0dip"/>

    <!--stroke标签: 边框-->
    <!--width 边框的宽度-->
    <!--color 边框的颜色-->
    <!--下面两个参数是 把边框变成虚线用-->
    <!--dashGap 虚线中空格的长度-->
    <!--dashWidth 虚线中实线的长度-->
    <stroke
        android:width="0px"
        android:color="@color/black"
        android:dashGap="0dip"
        android:dashWidth="0dip"/>

    <gradient
        android:angle="0"
        android:centerX="1"
        android:centerY="0"
        android:centerColor="#9FB6CD"
        android:endColor="#9AC0CD"
        android:gradientRadius="200"
        android:startColor="#8C8C8C"
        android:type="sweep"
        android:useLevel="false" />
</shape>