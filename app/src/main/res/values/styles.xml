<resources  xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme_NotitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item><!--
        <item name="android:windowBackground">@color/white</item>
        <item name="textLight">@color/white</item>
        <item name="textLight2">@color/transparent_white_cc</item>
        <item name="appBg">@color/transparent_cc</item>
