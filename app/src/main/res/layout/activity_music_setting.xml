                <TextView
                    android:id="@+id/tv_theme"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="1dp"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="主题"
                    android:textColor="?attr/textNight" />

                <LinearLayout
                    android:id="@+id/ll_automatic_play"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="1dp"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自动播放"
                            android:textColor="?attr/textNight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="打开软件继续之前的播放"
                            android:textColor="?attr/textNight2"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <cn.demomaster.huan.quickdeveloplibrary.widget.button.ToggleButton
                        style="@style/ToggleButton"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_automatic_pause"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自动暂停"
                            android:textColor="?attr/textNight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="耳机插拔状态改变暂停播放"
                            android:textColor="?attr/textNight2"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <cn.demomaster.huan.quickdeveloplibrary.widget.button.ToggleButton
                        style="@style/ToggleButton"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="?attr/line_item_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="关于"
                    android:textColor="?attr/textNight2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_help_and_suggest"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="1dp"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="帮助与建议"
                    android:textColor="?attr/textNight" />

                <TextView
                    android:id="@+id/tv_about_player"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="关于播放器"
                    android:textColor="?attr/textNight" />
            </LinearLayout>
        </LinearLayout>
</cn.demomaster.huan.quickdeveloplibrary.widget.QDScrollView>
