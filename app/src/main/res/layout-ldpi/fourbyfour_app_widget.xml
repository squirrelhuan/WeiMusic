<?xml version="1.0" encoding="utf-8"?>

<!-- ImageView four_by_four_albumart has contentDescription assigned programatically. -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/four_by_four"
    android:layout_width="match_parent"
    android:layout_height="@dimen/four_by_four_height"
    android:gravity="center"
    android:orientation="horizontal" >


    <ProgressBar
        android:id="@+id/four_by_four_progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:max="100"
        android:visibility="gone"/>
    <ProgressBar
        android:id="@+id/four_by_four_progressBar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:max="100"/>
    <ImageView
        android:id="@+id/iv_btn_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/four_by_four_controls"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/four_by_four_control_height"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/four_by_four_control_prev"
            style="@style/FourByTwoMediaButton"
            android:src="@drawable/button_notify_prev"/>

        <ImageButton
            android:id="@+id/four_by_four_control_play"
            style="@style/FourByFourMediaButton"
            android:src="@drawable/button_notify_play" />

        <ImageButton
            android:id="@+id/four_by_four_control_next"
            style="@style/FourByFourMediaButton"
            android:src="@drawable/button_notify_next" />

       <!-- <ImageButton
            android:id="@+id/four_by_four_control_shuffle"
            style="@style/FourByFourMediaButton"
            android:src="@drawable/apollo_holo_light_shuffle_normal"
            android:contentDescription="@string/cd_shuffle" />-->

       <!-- <ImageButton
            android:id="@+id/four_by_four_control_repeat"
            style="@style/FourByFourMediaButton"
            android:src="@drawable/apollo_holo_light_repeat_normal"
            android:contentDescription="@string/cd_repeat" />-->
    </LinearLayout>

