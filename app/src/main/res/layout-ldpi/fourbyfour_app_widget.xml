        android:id="@+id/four_by_four_controls_info_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/four_by_four_controls"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/four_by_four_albumart"
        android:layout_width="@dimen/four_by_four_album_art_width"
        android:layout_height="match_parent"
        android:layout_above="@id/four_by_four_controls_info_divider"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />-->

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/four_by_four_controls"
        android:background="@color/holo_blue_dark"
        tools:ignore="ContentDescription" />-->

    <TextView
        android:id="@+id/four_by_four_trackname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="暂无歌曲"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/four_by_four_artistname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four_by_four_trackname"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/text_size_small" />
    <LinearLayout
        android:id="@+id/four_by_four_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >



