<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_dark_33" >

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/btn_bg01"
            android:orientation="vertical" >

            <com.demomaster.weimusic.view.LinearLayout_withRaidoButton
                android:id="@+id/item_popupwindows_ll_btn_01"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="智能"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(根据网络状态智能选择)"
                        android:textColor="#585858"
                        android:textSize="14sp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/item_popupwindows_rb_001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp" />
            </com.demomaster.weimusic.view.LinearLayout_withRaidoButton>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/black" />

            <com.demomaster.weimusic.view.LinearLayout_withRaidoButton
                android:id="@+id/item_popupwindows_ll_btn_02"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="流畅"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(极速流畅)"
                        android:textColor="#585858"
                        android:textSize="14sp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/item_popupwindows_rb_002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp" />
            </com.demomaster.weimusic.view.LinearLayout_withRaidoButton>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/black" />

            <com.demomaster.weimusic.view.LinearLayout_withRaidoButton
                android:id="@+id/item_popupwindows_ll_btn_03"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="标准"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(正常音乐品质)"
                        android:textColor="#585858"
                        android:textSize="14sp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/item_popupwindows_rb_003"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp" />
            </com.demomaster.weimusic.view.LinearLayout_withRaidoButton>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/black" />

            <com.demomaster.weimusic.view.LinearLayout_withRaidoButton
                android:id="@+id/item_popupwindows_ll_btn_04"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="高品质"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(较高品质)"
                        android:textColor="#585858"
                        android:textSize="14sp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/item_popupwindows_rb_004"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp" />
            </com.demomaster.weimusic.view.LinearLayout_withRaidoButton>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/black" />

            <com.demomaster.weimusic.view.LinearLayout_withRaidoButton
                android:id="@+id/item_popupwindows_ll_btn_05"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="无损音乐"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(最高品质)"
                        android:textColor="#585858"
                        android:textSize="14sp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/item_popupwindows_rb_005"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp" />
            </com.demomaster.weimusic.view.LinearLayout_withRaidoButton>
        </LinearLayout>

        <Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_bg01"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>