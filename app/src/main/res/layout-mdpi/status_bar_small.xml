<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/status_bar_album_art"
        android:layout_width="@dimen/status_bar_album_art"
        android:layout_height="@dimen/status_bar_album_art"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/status_bar_button_info_container_padding_left" >

        <TextView
            android:id="@+id/status_bar_track_name"
            style="@style/StatusBarText"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_bar_artist_name"
            style="@style/StatusBarText"
            android:layout_marginTop="3dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingRight="2dp"
        android:orientation="horizontal">
    <ImageButton
        android:id="@+id/status_bar_prev"
        android:layout_width="@dimen/status_bar_button_width_height2"
        android:layout_height="@dimen/status_bar_button_width_height2"
        android:background="?android:selectableItemBackground"
        android:button="@null"
        android:contentDescription="@string/cd_play"
        android:padding="10.0dip"
        android:src="@drawable/button_notify_prev"
        android:tint="@color/black"/>

    <ImageButton
        android:id="@+id/status_bar_play"
        android:layout_width="@dimen/status_bar_button_width_height2"
        android:layout_height="@dimen/status_bar_button_width_height2"
        android:background="?android:selectableItemBackground"
        android:button="@null"
        android:contentDescription="@string/cd_next"
        android:padding="10.0dip"
        android:src="@drawable/button_music_play"
        android:scaleType="fitCenter"
        android:tint="@color/black" />

    <ImageButton
        android:id="@+id/status_bar_next"
        android:layout_width="@dimen/status_bar_button_width_height2"
        android:layout_height="@dimen/status_bar_button_width_height2"
        android:background="?android:selectableItemBackground"
        android:button="@null"
        android:padding="10.0dip"
        android:src="@drawable/button_notify_next"
        android:tint="@color/black"/>
    </LinearLayout>
</LinearLayout>
